<?php
$title = $this->translate('Categories');
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>
<p>
    <a href="<?php echo $this->url('category', array('action' => 'add')); ?>">
        <?php echo $this->escapeHtml('Add new category'); ?>
    </a>
</p>

<table class="table">
    <tr>
        <th>Name</th>
        <th>&nbsp;</th>
    </tr>
    <?php foreach ($categories as $category) : ?>
        <tr>
            <td><?php echo $this->escapeHtml($category->name); ?></td>
            <td>
                <a href="<?php echo $this->url('category', array('action' => 'edit', 'id' => $category->categoryID)); ?>">
                    <?php echo $this->translate('Edit'); ?>
                </a>
                <a href="<?php echo $this->url('category', array('action' => 'delete', 'id' => $category->categoryID)); ?>">
                    <?php echo $this->translate('Delete'); ?>
                </a>
            </td>
        </tr>
    <?php endforeach; ?>
</table>